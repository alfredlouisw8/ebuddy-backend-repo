{
	"functions": [
		{
			"source": "dist",
			"runtime": "nodejs20",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log",
				"*.local"
			],
			"predeploy": [
				"npm --prefix \"$RESOURCE_DIR\" run lint",
				"npm --prefix \"$RESOURCE_DIR\" run build"
			],
			"codebase": "default"
		}
	],
	"emulators": {
		"functions": {
			"port": 5001
		},
		"ui": {
			"enabled": true,
			"port": ""
		},
		"singleProjectMode": true,
		"auth": {
			"port": 9099
		},
		"firestore": {
			"port": 8080
		}
	}
}
